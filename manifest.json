{
    "manifest_version": 2,
    "name": "My Cool Extension",
    "version": "0.1",
    "browser_action": {
        "default_icon": "img/tanha.png"
    },
    "background": {
        "scripts": ["background.js"]
      },
      "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["content.js"],
          "css": ["style.css"]
        }
      ],
      "web_accessible_resources": [
        "*.jpg",
        "*.jpeg",
        "*.png",
        "*.json"
      ],
      "permissions": [
        "tabs",
        "storage",
        "notifications",
        "http://*/",
        "https://*/"
      ]

  }